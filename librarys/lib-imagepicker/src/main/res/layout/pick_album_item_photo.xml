<?xml version="1.0" encoding="utf-8"?>
<com.medlinker.lib.imagepicker.widget.SquareItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="@drawable/pick_album_photo_bg"
        />
        <!--fresco:failureImage="@mipmap/ic_broken_image_black"-->
        <!--fresco:failureImageScaleType="centerCrop"-->
        <!--fresco:placeholderImage="@mipmap/ic_photo_black"-->
        <!--fresco:placeholderImageScaleType="centerCrop" />-->


    <ImageView
        android:id="@+id/v_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dip"
        android:clickable="true"
        android:padding="5dp"
        android:src="@drawable/pick_album_photo_checkbox_bg" />

</com.medlinker.lib.imagepicker.widget.SquareItemLayout>