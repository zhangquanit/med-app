<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_48"
    android:layout_centerVertical="true"
    android:background="@android:color/transparent"
    android:paddingLeft="@dimen/size_2"
    android:paddingRight="@dimen/size_2">

    <FrameLayout
        android:id="@+id/left_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_48"
        android:layout_alignParentLeft="true"
        android:padding="@dimen/size_2">

        <ImageView
            android:id="@+id/left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/size_10"
            android:paddingRight="@dimen/size_10"
            android:scaleType="centerInside"
            android:src="@mipmap/pick_icon_naviback_gray" />

        <TextView
            android:id="@+id/left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/size_12"
            android:paddingRight="@dimen/size_8"
            android:textColor="@color/pick_press_blue_1e8aff"
            android:textSize="@dimen/text_size_15"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"
        android:layout_marginRight="@dimen/size_50"
        android:layout_toRightOf="@id/left_button_layout"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:textColor="#454554"
        android:textSize="@dimen/text_size_17" />

    <LinearLayout
        android:id="@+id/right_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_48"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="@dimen/size_2">

        <LinearLayout
            android:id="@+id/ll_right_extra_view_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/right_icon"
            android:layout_width="@dimen/size_34"
            android:layout_height="@dimen/size_34"
            android:padding="@dimen/size_2"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <TextView
            android:id="@+id/right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_8"
            android:paddingRight="@dimen/size_8"
            android:textColor="@color/pick_press_blue_1e8aff"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

</RelativeLayout>