<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dialog_bottom_rv_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.medlinker.widget.line.UiLineView
        android:id="@+id/dialog_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dialog_tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_action_item_height"
        android:gravity="center"
        android:text="@string/dialog_cancel_default"
        android:textColor="@color/ui_black3"
        android:textSize="@dimen/dialog_action_item_text_size" />


</LinearLayout>