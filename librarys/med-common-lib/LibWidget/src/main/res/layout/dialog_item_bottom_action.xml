<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_bottom_item_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_action_item_height"
        android:gravity="center"
        android:text="item"
        android:textColor="@color/ui_black1"
        android:textSize="@dimen/dialog_action_item_text_size" />

    <com.medlinker.widget.line.UiLineView
        android:id="@+id/dialog_bottom_item_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>