<?xml version="1.0" encoding="utf-8"?><!--右边带消息的图标 -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/navigation_icon_size"
    android:layout_height="@dimen/navigation_icon_size"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="@dimen/navigation_margin_left_right">

    <ImageView
        android:id="@+id/navigation_iv_right_icon_msg"
        android:layout_width="@dimen/navigation_icon_size"
        android:layout_height="@dimen/navigation_icon_size"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        tools:src="@mipmap/navigation_message_gray" />

    <com.medlinker.base.widget.badgeview.BadgeView
        android:id="@+id/navigation_bv_right_icon_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        app:badgeTextSize="8sp"
        android:visibility="gone"
        tools:badge_Style="circle"
        tools:badgeText="99+"
        tools:visibility="visible" />
</FrameLayout>