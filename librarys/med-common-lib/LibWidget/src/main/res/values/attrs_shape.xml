<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShapeBg">

        <!-- shape标签属性 -->
        <attr name="sp_shape" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="oval" value="1" />
            <enum name="line" value="2" />
            <enum name="ring" value="3" />
        </attr>
        <attr name="sp_dither" format="boolean" />
        <attr name="sp_innerRadius" format="dimension|reference" />
        <attr name="sp_innerRadiusRatio" format="float" />
        <attr name="sp_thickness" format="dimension|reference" />
        <attr name="sp_thicknessRatio" format="float" />
        <attr name="sp_useLevel" format="boolean" />
        <attr name="sp_tintMode" format="integer" />
        <attr name="sp_tint" format="color|reference" />
        <!-- <attr name="opticalInsetLeft" format="dimension|reference" />
         <attr name="opticalInsetTop" format="dimension|reference" />
         <attr name="opticalInsetRight" format="dimension|reference" />
         <attr name="opticalInsetBottom" format="dimension|reference" />-->

        <!--宽高 -->
        <attr name="sp_width" format="dimension|reference" />
        <attr name="sp_height" format="dimension|reference" />

        <!-- 圆角半径 -->
        <attr name="sp_radius" format="dimension" />
        <attr name="sp_topLeftRadius" format="dimension|reference" />
        <attr name="sp_topRightRadius" format="dimension|reference" />
        <attr name="sp_bottomLeftRadius" format="dimension|reference" />
        <attr name="sp_bottomRightRadius" format="dimension|reference" />

        <!-- 背景颜色 -->
        <attr name="sp_solid" format="reference|color" />

        <!--边框 -->
        <attr name="sp_strokeWidth" format="reference|dimension" />
        <attr name="sp_strokeColor" format="reference|color" />
        <attr name="sp_strokeDashWidth" format="reference|dimension" />
        <attr name="sp_strokeDashGap" format="reference|dimension" />

        <!-- padding -->
        <attr name="sp_padding" format="reference|dimension" />
        <attr name="sp_paddingLeft" format="reference|dimension" />
        <attr name="sp_paddingRight" format="reference|dimension" />
        <attr name="sp_paddingTop" format="reference|dimension" />
        <attr name="sp_paddingBottom" format="reference|dimension" />

        <!-- gradient-->
        <attr name="sp_gradientAngle" format="float" />
        <attr name="sp_gradientStartColor" format="reference|color" />
        <attr name="sp_gradientCenterColor" format="reference|color" />
        <attr name="sp_gradientEndColor" format="reference|color" />
        <attr name="sp_gradientCenterX" format="float|fraction" />
        <attr name="sp_gradientCenterY" format="float|fraction" />
        <attr name="sp_gradientType" format="enum">
            <enum name="linear" value="0" />
            <enum name="radial" value="1" />
            <enum name="sweep" value="2" />
        </attr>
        <attr name="sp_gradientRadius" format="reference|dimension|float" />
        <attr name="sp_gradientUseLevel" format="boolean" />

    </declare-styleable>
</resources>