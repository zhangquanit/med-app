<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ~~~~~~~~~~~~TAB~~~~~~~~~~~~~ -->
    <declare-styleable name="CommonTab">
        <attr name="tab_type" format="enum">
            <enum name="standard" value="0" />
            <enum name="bg1_num2" value="1" />
            <enum name="bg1_num3" value="2" />
            <enum name="bg2" value="3" />
        </attr>
    </declare-styleable>
    <!-- ~~~~~~~~~~~~搜索框~~~~~~~~~~~~~ -->
    <declare-styleable name="CommonSearch">
        <attr name="search_hint" format="string" />
    </declare-styleable>
    <!-- ~~~~~~~~~~~~标签~~~~~~~~~~~~~ -->
    <declare-styleable name="CommonLabel">
        <attr name="label_checked_style" format="integer" />
    </declare-styleable>

    <!-- ~~~~~~~~~~~~输入框~~~~~~~~~~~~~ -->
    <declare-styleable name="CommonInputEdit">
        <attr name="input_hint" format="string" />
    </declare-styleable>

    <declare-styleable name="RoundCornerTextView">
        <attr name="selfRoundCorner" format="boolean" />
        <attr name="selfRadius" format="dimension" />
        <attr name="radius_left_top" format="dimension" />
        <attr name="radius_right_top" format="dimension" />
        <attr name="radius_right_bottom" format="dimension" />
        <attr name="radius_left_bottom" format="dimension" />
        <attr name="strokeColor" format="color" />
        <attr name="solidColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="shape" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="oval" value="1" />
        </attr>
        <attr name="scaledType" format="enum">
            <enum name="matrix" value="0" />
            <enum name="fitXY" value="1" />
            <enum name="fitStart" value="2" />
            <enum name="fitCenter" value="3" />
            <enum name="fitEnd" value="4" />
            <enum name="center" value="5" />
            <enum name="centerCrop" value="6" />
            <enum name="centerInside" value="7" />
        </attr>
        <attr name="backgroundFitType" format="enum">
            <enum name="back" value="0" />
            <enum name="crop" value="1" />
            <enum name="inside" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BadgeView">
        <attr name="badgeBackgroundColor" format="color" />
        <attr name="badgeTextColor" format="color" />
        <attr name="badgeText" format="string" />
        <attr name="badgeTextSize" format="dimension" />
        <attr name="badgePadding" format="dimension" />
        <attr name="pointRadius" format="dimension" />
        <attr name="badge_Style" format="enum">
            <enum name="circle" value="1" />
            <enum name="point" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>
</resources>