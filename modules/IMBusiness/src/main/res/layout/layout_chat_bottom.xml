<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vs_chat_bottom_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_55">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">

        <ViewSwitcher
            android:id="@+id/vs_menu"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_im_menu" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_im_menu_normal" />
        </ViewSwitcher>

        <EditText
            android:id="@+id/et_chat"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_37"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_weight="1"
            android:background="@drawable/bg_chat_et_shape"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10" />

        <ImageView
            android:id="@+id/btn_send"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:src="@mipmap/ic_im_send" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/layout_chat_bottom_float"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" />

</ViewSwitcher>