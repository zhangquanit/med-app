<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_medicine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:maxEms="15"
        android:singleLine="true"
        android:textColor="@color/color_454553"
        android:textSize="@dimen/sp_15"
        tools:text="我是测试数据我是我是测试数据我是我是测试数据我是我是测试数据我是" />

    <TextView
        android:id="@+id/tv_medicine_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_medicine_name"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_toRightOf="@+id/tv_medicine_name"
        android:singleLine="true"
        android:textColor="@color/color_8c8c94"
        android:textSize="@dimen/sp_12"
        tools:text="我是测试数据我是测试数据" />

    <TextView
        android:id="@+id/tv_medicine_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_medicine_name"
        android:singleLine="true"
        android:textColor="@color/color_8c8c94"
        android:textSize="@dimen/sp_13"
        tools:text="我是测试数据" />
</RelativeLayout>


