<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="294.5dp"
    android:layout_gravity="center"
    android:paddingTop="10dp"
    android:background="@drawable/shape_slide_code_radus"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/m_fl_backgroud"
        android:layout_width="300dp"
        android:layout_height="176.5dp"
        tools:background="@color/ui_blue">

        <ImageView
            android:id="@+id/m_iv_float"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            tools:background="@color/white" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="19.5dp"
        android:text="@string/slide_code_tips"
        android:textColor="@color/black" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <SeekBar
            android:id="@+id/m_seek_bar"
            android:layout_width="270dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_radus_ffcccc"
            android:max="205"
            android:thumbOffset="10dp"
            android:thumb="@drawable/captcha_thumb"
            android:progressDrawable="@null" />

        <TextView
            android:id="@+id/m_tv_thumb"
            android:layout_width="97.5dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/shape_radus_f35656"
            android:gravity="center"
            android:text="拖动滑块"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </FrameLayout>


</LinearLayout>